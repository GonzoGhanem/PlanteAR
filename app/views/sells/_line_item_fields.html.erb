<tr  class="line_fields">
  <td>
  	<%= f.select :product_id, Product.all.collect {|p| [ p.name, p.id ] }, {:prompt=>"Seleccione el nombre del producto"}, {:class=>"product-field input-xxlarge"} %>
  </td>
  <td><%= f.number_field :amount, :placeholder=>"Cantidad", :class=>"amount-field input-mini pull-right" %></td>
  <td><%= f.number_field :unit_price, :placeholder=>"Precio",:class=>"price-field input-mini pull-right" %></td>
  <td class="input-prepend">
      <span class="add-on">@</span>
      <%= f.number_field :discount, :placeholder=>"Descuento", :class=>"prependedInput discount-field input-mini" %>
    </td>
  <td><%= f.number_field :subtotal, :placeholder=>"SubTotal", :class=>"subtotal-field input-mini pull-right" %>
  		<%= f.hidden_field :_destroy %>
  	  	<%= link_to "Borrar", "#", :class=>"remove_fields" %>
  	</td>
</tr>


