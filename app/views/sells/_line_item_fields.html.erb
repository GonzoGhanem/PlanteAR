<tr  class="line_fields">
  <td>
  	<%= f.select :product_id, Product.all.collect {|p| [ p.name, p.id ] }, {:include_blank => true}, {:class=>"product-field input-xxlarge"}%>
  </td>
  <td><%= f.number_field :amount, :placeholder=>"Cantidad", :title=>"Cantidad", :class=>"amount-field input-mini pull-right" %></td>
  <td><%= f.text_field :unit_price, :placeholder=>"Precio", :title=>"Precio", :class=>"price-field input-mini pull-right" %></td>
  <td class="input-prepend">
      <span class="add-on">%</span>
      <%= f.text_field :discount, :placeholder=>"Descuento", :title=>"Descuento", :class=>"prependedInput discount-field input-mini" %>
    </td>
  <td><%= f.text_field :subtotal, :placeholder=>"SubTotal", :title=>"SubTotal" , :class=>"subtotal-field input-mini pull-right" %>
  		<%= f.hidden_field :_destroy %>
  	  	<%= link_to "Borrar", "#", :class=>"remove_fields" %>
  	</td>
</tr>